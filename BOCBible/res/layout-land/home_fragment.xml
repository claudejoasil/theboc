<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".50">
        <ImageView 
            android:contentDescription="@null"
            android:src="@drawable/home_pic_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />
        <LinearLayout
	        android:id="@+id/latest_reading_box"
	        android:layout_width="match_parent"
	        android:layout_height="48dp"
	        android:paddingLeft="@dimen/activity_horizontal_margin"
	        android:layout_alignParentBottom="true"
	        android:background="#E0E0E0"
	        android:orientation="horizontal"
	        android:onClick="gotoBible">
	        
		    <ImageView
	        android:layout_width="25dp"
	        android:layout_height="wrap_content"
	        android:contentDescription="@string/desc_list_item_icon"
	        android:src="@drawable/ic_bible" />
	
	    	<TextView
	        android:id="@+id/latest_bible_reading"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:minHeight="?android:attr/listPreferredItemHeightSmall"
	        android:textAppearance="?android:attr/textAppearanceListItemSmall"
	        android:textColor="@color/textviewcolor"
	        android:textSize="14sp"
	        android:gravity="center_vertical"/>
		</LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/column_right"
        android:layout_width="0dp"
        android:layout_weight=".50"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        >
		<ListView android:id="@+id/lst_bible_weekly_verse"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"  
        android:choiceMode="singleChoice"
        android:layout_marginTop="10dp"
        android:divider="@null"/>
	</RelativeLayout>
</LinearLayout>

