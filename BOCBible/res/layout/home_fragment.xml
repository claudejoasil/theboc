<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_pic_1" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:orientation="vertical"
        >
    <LinearLayout
        android:id="@+id/start_reading_box"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:paddingLeft="@dimen/big_padding"
        android:paddingRight="@dimen/big_padding"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:background="@color/action_bar_bg"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:onClick="gotoBible">

    	<TextView
        android:id="@+id/start_reading"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:text="@string/start_reading"
        android:gravity="center_vertical"/>
    </LinearLayout>
    <!-- <LinearLayout
        android:id="@+id/start_reading_box1"
        android:layout_width="0dp"
        android:layout_weight=".50"
        android:layout_height="48dp"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:background="@color/action_bar_bg"
        android:orientation="horizontal"
        android:layout_gravity="left"
        android:onClick="gotoBible">

    	<TextView
        android:id="@+id/start_reading1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:text="@string/start_reading"
        android:gravity="center_vertical"/>
        
	</LinearLayout> -->
	<LinearLayout
        android:id="@+id/latest_reading_box"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#E0E0E0"
        android:orientation="horizontal"
        android:onClick="gotoBible">
        
	    <ImageView
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:contentDescription="@string/desc_list_item_icon"
        android:src="@drawable/ic_bible" />

    	<TextView
        android:id="@+id/latest_bible_reading"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:textColor="@color/textviewcolor"
        android:textSize="14sp"
        android:gravity="center_vertical"/>
        
	</LinearLayout>
	<LinearLayout 
		android:id="@+id/daily_verse_box"
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/gray_border"
		android:layout_marginTop="10dp"
		android:layout_marginRight="@dimen/activity_horizontal_margin"
		android:layout_marginLeft="@dimen/activity_horizontal_margin">
	 	<RelativeLayout 
	 	    android:layout_width="match_parent"
	 		android:layout_height="wrap_content"
	 		android:background="#FAFAFA"
	 		android:padding="@dimen/activity_horizontal_margin">
	 	     <TextView
	 	        android:id="@+id/title_weeklyVerse"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:minHeight="?android:attr/listPreferredItemHeightSmall"
		        android:textAppearance="?android:attr/textAppearanceListItemSmall"
		        android:textColor="@color/textviewcolor"
		        android:gravity="top"
		        android:textStyle="bold"
		        android:text="@string/verse_of_the_week"/> 
		    <TextView
		        android:id="@+id/txt_weeklyVerse"
		        android:layout_below="@+id/title_weeklyVerse"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:minHeight="?android:attr/listPreferredItemHeightSmall"
		        android:textAppearance="?android:attr/textAppearanceListItemSmall"
		        android:textColor="@color/textviewcolor"
		        android:textStyle="italic"
		        android:gravity="center_vertical"/> 
		   	<TextView
		        android:id="@+id/txt_weeklyVerseReference"
		        android:layout_below="@+id/txt_weeklyVerse"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:minHeight="?android:attr/listPreferredItemHeightSmall"
		        android:textAppearance="?android:attr/textAppearanceListItemSmall"
		        android:textColor="@color/action_bar_tab_text_color"
		        android:textSize="14sp"
		        android:gravity="bottom"/> 
	 	</RelativeLayout>
	</LinearLayout>
	</LinearLayout>
</RelativeLayout>
